{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015"],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "exclude": [ "dist", "node_modules" ],
    "include": [ "src" ]
}